{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "ESNext", 
    "moduleResolution": "node", 
    "rootDir": "./", 
    "outDir": "./dist", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
    "resolveJsonModule": true, 
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./*"] 
    }
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"] 
}